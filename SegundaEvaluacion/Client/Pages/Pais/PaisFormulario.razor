<EditForm Model="Pais" OnValidSubmit="onValidSubmit">
    <DataAnnotationsValidator/>
    <div class="form-group">
        <label>Código</label>
        <div>
            <InputText class="form-control" @bind-Value="@Pais.CodPais" />
            <ValidationMessage For="@(() => Pais.CodPais)"/>
        </div>
    </div>
    <div class="form-group">
        <label>Nombre del país</label>
        <div>
            <InputText class="form-control" @bind-Value="@Pais.NombrePais" />
            <ValidationMessage For="@(() => Pais.NombrePais)" />
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Guardar</button>
    <button class="btn btn-secondary" @onclick="onCancel" type="button">Cancelar</button>
</EditForm>

@code {
    [Parameter] public Pais Pais { get; set; }
    [Parameter] public EventCallback onValidSubmit { get; set; }
    [Parameter] public EventCallback onCancel { get; set; }
}
